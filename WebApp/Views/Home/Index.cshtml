    <section class="info_section  layout_padding2-top">

        <div class="info_container ">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-3">
                        <h6>
                            關於我們
                        </h6>
                        <p>
                            一個致力於比價家電的網站
                        </p>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="info_form ">
                            <form action="#">
                                <input type="email" placeholder="輸入您的email">
                                <button>
                                    訂閱
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">

                    </div>
                    <div class="col-md-6 col-lg-3">
                        <h6>
                            聯絡我們
                        </h6>
                        <div class="info_link-box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span> 台北市士林區華岡路55號 </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span> 02 7737 8979</span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span> 範例@ulive.pccu.edu.tw</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-3">

                </div>
            </div>
        </div>

    </section>

    <!-- end info section -->

</body>
</html>