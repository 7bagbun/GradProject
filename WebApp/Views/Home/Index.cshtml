                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span> iiihomeappliances@gmail.com</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- end info section -->

</body>
</html>