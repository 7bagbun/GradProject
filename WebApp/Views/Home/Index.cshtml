@model IEnumerable<WebApp.Models.Selling>

@section scripts {
    <script src="~/Scripts/OwlCarousel/owl.carousel.min.js"></script>
    <script src="~/Scripts/Index/index.js"></script>
}

@section css {
    <!-- slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

    <!-- Custom styles for this template -->
    <link href="~/Content/Index/style.css" rel="stylesheet" />

    <!-- responsive style -->
    <link href="~/Content/Index/responsive.css" rel="stylesheet" />
    <link href="~/Content/OwlCarousel/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/OwlCarousel/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/Index/index.css" rel="stylesheet" />
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>i家電</title>
</head>

<body>
    <!-- slider section -->
    <div class="hero_area">
        <section class="slider_section">
            <div id="carousel" class="slider_container owl-carousel owl-theme carousel slide" data-ride="carousel">
                <div class="item">
                    <img src="~/Assets/Images/index-bg.png" alt="" />
                </div>
                <div class="item">
                    <img src="~/Assets/Images/index-bg2.png" alt="" />
                </div>
            </div>
        </section>
    </div>
    <!-- end slider section -->

    <!-- shop section -->
    <section class="shop_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    熱門商品比價
                </h2>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="box">
                            <a href="@Url.Action("list", "item", new { id = item.Product1.Id })">
                                <div class="img-box">
                                    <img src="@Url.Action("getcached", "image", new { id = item.Image1.Id } )" alt="">
                                </div>
                                <div class="detail-box">
                                    <h6>
                                        @item.Product1.Brand @item.Product1.ProductType @item.Product1.Model
                                    </h6>
                                    <h6 class="price">
                                        售價:
                                        <span>
                                            @(item.Price)起
                                        </span>
                                    </h6>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
            <!--<div class="btn-box">
                <a href="">
                    瀏覽所有商品
                </a>
            </div>-->
        </div>
    </section>
    <!-- shop section -->
    <!-- news section -->
    <section>
        <div class="news">
            <h2 class="text-center">最新消息</h2>
            <div class="container">
                <div class="row">
                    <div id="news-list" class="col">
                        <div class="list-group list-group-horizontal news-item news-item-empty">
                            <div class="list-group-item color-tag"></div>
                            <div class="list-group-item" style="width: 100%">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">&nbsp;</h5>
                                    <small class="text-muted"></small>
                                </div>
                                <p class="mb-1 text-muted content">&nbsp;</p>
                            </div>
                        </div>
                        <div class="list-group list-group-horizontal news-item news-item-empty">
                            <div class="list-group-item color-tag"></div>
                            <div class="list-group-item" style="width: 100%">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">&nbsp;</h5>
                                    <small class="text-muted"></small>
                                </div>
                                <p class="mb-1 text-muted content">&nbsp;</p>
                            </div>
                        </div>
                        <div class="list-group list-group-horizontal news-item news-item-empty">
                            <div class="list-group-item color-tag"></div>
                            <div class="list-group-item" style="width: 100%">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">&nbsp;</h5>
                                    <small class="text-muted"></small>
                                </div>
                                <p class="mb-1 text-muted content">&nbsp;</p>
                            </div>
                        </div>
                        <div class="list-group list-group-horizontal news-item news-item-empty">
                            <div class="list-group-item color-tag"></div>
                            <div class="list-group-item" style="width: 100%">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">&nbsp;</h5>
                                    <small class="text-muted"></small>
                                </div>
                                <p class="mb-1 text-muted content">&nbsp;</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div id="news-detail" class="news-detail">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1 news-title">Title</h5>
                                <h5 class="news-type">Type</h5>
                            </div>
                            <hr />
                            <p class="mb-1 news-content">Content</p>
                            <p class="news-date">Date</p>
                        </div>
                    </div>
                </div>
                <div class="row page-nav">
                    <div class="col">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link">&laquo;</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item disabled"><a class="page-link" href="#">2</a></li>
                            <li class="page-item disabled"><a class="page-link" href="#">3</a></li>
                            <li class="page-item disabled">
                                <a class="page-link" href="#">&raquo;</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end news section -->
    <!-- info section -->
    <section class="info_section">
        <div class="info_container ">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <h6>
                            關於我們
                        </h6>
                        <p>
                            一個致力於比價家電的網站
                        </p>
                    </div>
