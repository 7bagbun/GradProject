@model WebApp.Models.Comment

@{
    ViewBag.Title = "CommentDetail";
    ViewBag.Active = "cl";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@section scripts {
    <script src="~/Scripts/Admin/comment-detail.js"></script>
}

<style>
    .section {
        color: #434C5E;
        border-radius: 3px;
        background-color: #ECEFF4;
        box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.4);
    }

    .form-control:disabled {
        background-color: #fff;
    }

    .true {
        color: #85BF53;
    }

    .false {
        color: #BF616A;
    }
</style>
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/admin/commentList">評論列表</a></li>
        <li class="breadcrumb-item active" aria-current="page">詳細資料</li>
    </ol>
</nav>
<hr />

<div class="row justify-content-center">
    <div class="col-6">
        <div class="section p-3">
            <form id="edit-form" action="/moderation/editAnnouncement" method="post">
                <div class="row">
                    <div class="col-lg-6">
                        <h5 class="m-0">評論內容</h5>
                    </div>
                </div>
                <hr />
                <input class="hidden" type="text" name="id" value="@Model.Id" />
                <div class="row">
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label class="form-text">發佈者</label>
                            <input class="form-control" type="text" name="createdDate" disabled value="@Model.Member.Username">
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label class="form-text">發布時間</label>
                            <input class="form-control" type="text" name="createdDate" disabled value="@Model.CreatedDate">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label class="form-text">評分</label>
                            <input class="form-control input" type="text" name="title" disabled value="@Model.Rating" />
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label class="form-text">產品</label>
                            <div class="form-control">
                                <a href="/item/list/@Model.Product?tab=comment" target="_blank">
                                    @Model.Product1.Brand @Model.Product1.Model @Model.Product1.ProductType
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label class="form-text">內容</label>
                            <textarea class="form-control input" name="content" style="min-height:2.4em;height:8em;" disabled>@Model.Content</textarea>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col">
                        <div class="form-group text-right">
                            <button type="button" class="btn btn-edit btn-secondary mr-3 px-4 hidden" onclick="setCtrl(false)">取消</button>
                            <button type="button" class="btn btn-edit btn-primary px-4 hidden" onclick="submitChanges()">儲存</button>
                            <button type="button" class="px-4 btn btn-show btn-danger" onclick="deleteComment(@Model.Id)">刪除</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
