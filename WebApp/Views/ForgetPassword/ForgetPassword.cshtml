@{
    ViewBag.Title = "ForgetPassword";
}

@section scripts {
    <script src="~/Scripts/ForgetPassword/forget-pwd.js"></script>
}

@section css {
    <link href="~/Content/ForgetPassword/forget-pwd.css" rel="stylesheet" />
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">忘記密碼</h2>

                    @using (Html.BeginForm("SendEmailCode", "ForgetPassword", FormMethod.Post, new { id = "fp" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="email">電子信箱</label>
                            <input type="text" name="email" id="email" class="form-control" />
                        </div>

                        <button id="btn-submit" class="btn btn-primary form-control">送出</button>
                    }

                    <p id="msg" class="hidden"></p>
                </div>
            </div>
        </div>
    </div>
</div>

