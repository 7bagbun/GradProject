<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>i家電</title>

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <!-- Custom styles for this template -->
    <link href="~/Content/Index/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/Content/Index/responsive.css" rel="stylesheet" />

    <!-- global style -->
    <link href="~/Content/global.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/Login/login-modal.css" />

    <!-- Site Metas -->
    <link rel="shortcut icon" href="~/images/favicon.png" type="~/image/x-icon">

    @RenderSection("css", required: false)
</head>
<body>
    <header class="header_section">
        <nav class="navbar navbar-expand-lg custom_nav-container ">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class=""></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav  ">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">首頁 <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("all", "item")">
                            商品比價
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="contact.html">關於我們</a>
                    </li>
                </ul>
                <div class="user_option">
                    <ul class="nav navbar-nav nav-link">
                        <li>
                            <form class="form-inline" style="margin-right: 25px">
                                <button class="btn nav_search-btn" type="submit">
                                    <i class="fa fa-search" aria-hidden="true"></i>
                                </button>
                                <span>
                                    搜尋
                                </span>
                            </form>
                        </li>
                    </ul>
                    @if (Session["user"] == null)
                    {
                        @Html.ActionLink("註冊", "register", "login", null, new { @class = "navbar-nav nav-link" })
                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#login-modal">登入</button>
                    }
                    else
                    {
                        <span class="navbar-nav nav-link">您好，@Session["user"]</span>
                        @Html.ActionLink("登出", "logout", "login", null, new { @class = "btn btn-info", style = "color: white;" })
                    }
                </div>
            </div>
            <div id="login-modal" class="modal fade" role="dialog">
                <div class="modal-dialog" style="width: 400px">
                    <div class="modal-content" style="padding: 1em;">
                        <div class="modal-body">
                            <div class="header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title form-title">登入</h4>
                            </div>
                            <div>
                                <form id="login-form" action="/Account/LoginAjax" method="post">
                                    <div class="form-group">
                                        <label for="username" class="form-text">帳號</label>
                                        <input type="text" name="username" id="username" class="form-control input m-input">
                                    </div>
                                    <div class="form-group">
                                        <label for="psw" class="form-text">密碼</label>
                                        <input type="password" id="passwd" name="passwd" class="form-control input m-input">
                                    </div>
                                    <input type="submit" id="submit" class="btn btn-info modal-btn" value="登入">
                                </form>
                            </div>
                            <div class="msg-div">
                                <span id="err-msg" class="hide" style="color: red"></span>
                            </div>
                            <div style="text-align: right">
                                <span>不是會員? <a href="/Login/Register">註冊</a></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer class=" footer_section">
        <div class="container">
            <p>
            </p>
        </div>
    </footer>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/Login/login-modal.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>